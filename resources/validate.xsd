<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"  
            xmlns:ds="http://www.w3.org/2000/09/xmldsig#"
  attributeFormDefault="unqualified" elementFormDefault="qualified">

<xsd:import namespace="http://www.w3.org/2000/09/xmldsig#"
           schemaLocation="xmldsig-core-schema.xsd"/>

	<xsd:element name="SELECT">
		<xsd:complexType>
			<xsd:sequence>
				<xsd:element name="CHAMPS" minOccurs="1" maxOccurs="1">
                    <xsd:complexType>
                        <xsd:sequence>
                            <xsd:element name="CHAMP" type="typeChamp" minOccurs="1" maxOccurs="unbounded"/>
                        </xsd:sequence>
                    </xsd:complexType>
                </xsd:element>
				<xsd:element name="TABLES" minOccurs="1" maxOccurs="1">
                    <xsd:complexType>
                        <xsd:sequence>
                            <xsd:element name="TABLE" type="typeTable" minOccurs="1" maxOccurs="unbounded" />
                        </xsd:sequence>
                    </xsd:complexType>
                </xsd:element>
                <xsd:element name="CONDITION" type="xsd:string" minOccurs="0" maxOccurs="1"/>
                <xsd:element ref="ds:Signature" minOccurs="1" />
			</xsd:sequence>
		</xsd:complexType>
	</xsd:element>
	<xsd:element name="INSERT">
		<xsd:complexType>
			<xsd:sequence>
				<xsd:element name="TABLE" type="typeTable"/>
				<xsd:element name="VALUES" minOccurs="1" maxOccurs="unbounded">
                    <xsd:complexType>
                        <xsd:sequence>
                            <xsd:element name="VALUE" type="xsd:string" minOccurs="1" maxOccurs="unbounded" />
                        </xsd:sequence>
                    </xsd:complexType>
                </xsd:element>
                <xsd:element ref="ds:Signature" minOccurs="1" />
			</xsd:sequence>
		</xsd:complexType>
	</xsd:element>
	<xsd:element name="DELETE">
		<xsd:complexType>
			<xsd:sequence>
				<xsd:element name="TABLE" type="typeTable"/>
                <xsd:element name="CONDITION" type="xsd:string" minOccurs="0" maxOccurs="1"/>
                <xsd:element ref="ds:Signature" minOccurs="1" />
			</xsd:sequence>
		</xsd:complexType>
	</xsd:element>
	<xsd:element name="UPDATE">
		<xsd:complexType>
			<xsd:sequence>
				<xsd:element name="TABLE" type="typeTable"/>
				<xsd:element name="CHAMP" type="typeChamp"/>
				<xsd:element name="VALUE" type="xsd:string"/>
                <xsd:element name="CONDITION" type="xsd:string" minOccurs="0" maxOccurs="1"/>
                <xsd:element ref="ds:Signature" minOccurs="1" />
			</xsd:sequence>
		</xsd:complexType>
	</xsd:element>

	<xsd:complexType name="typeChamp">
		<xsd:simpleContent>
			<xsd:extension base="xsd:string">
				<xsd:attribute name="table" type="xsd:string" use="required"/>
			</xsd:extension>
		</xsd:simpleContent>
	</xsd:complexType>
	
	
	<xsd:simpleType name="table">
		<xsd:restriction base="xsd:normalizedString">
			<xsd:enumeration value="arbitre"/>
			<xsd:enumeration value="arbitrer"/>
			<xsd:enumeration value="equipe"/>
			<xsd:enumeration value="jouer"/>
			<xsd:enumeration value="joueur"/>
			<xsd:enumeration value="matchs"/>
			<xsd:enumeration value="poste"/>
			<xsd:enumeration value="stade"/>
		</xsd:restriction>
	</xsd:simpleType>

		<xsd:complexType  name="typeTable">
			<xsd:simpleContent>
				<xsd:extension base="table">
					<xsd:attribute name="alias" type="xsd:string" use="optional"/>
				</xsd:extension>
			</xsd:simpleContent>
		</xsd:complexType>
</xsd:schema>

